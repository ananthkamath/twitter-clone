<% @tweets.each do |tweet| %>
  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-48x48">
            <%= link_to tweet.user.profile do %>
              <% if tweet.user.profile&.avatar&.attached? %>
                <%= image_tag tweet.user.profile.avatar %>
              <% else %>
                <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
              <% end %>
            <% end %>
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4">
            <%= tweet.user.profile.name %> 
          </p>
          <p class="subtitle is-6">
            <%= tweet.user.profile.handle %>
          </p>
        </div>
      </div>
      <div class="content">
        <%= tweet.content %>
        <br>
        <%= tweet.created_at %>
      </div>
      <footer class="card-footer">
        <%= link_to tweet.likes.count.to_s + ' Likes', likes_toggle_path(like: { user_id: current_user.id, tweet_id: tweet.id }), method: :post , class:"card-footer-item" %>
        <% if tweet.user == current_user %>
          <%= link_to 'Delete', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class:"card-footer-item" %>
        <% end %>
      </footer>
    </div>
  </div>
  </br>
<% end %>
