<div class="card">
  <div class="card-image">
    <figure class="image is-4by3">
      <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
    </figure>
  </div>
  <div class="card-content">
    <div class="media">
      <div class="media-content">
        <p class="title is-4">
          <%= 'Name Goes Here' %>
        </p>
        <p class="subtitle is-6">
          <%= '@handlegoeshere' %>
        </p>
      </div>
    </div>
    <div class="content">
      <p>
        <%= 'Helps folks know you better!!' %>
      </p>
      <p>
        Location: <%= 'Location' %>
      </p>
    </div>
    <footer class="card-footer">
      <%= link_to 'Update Profile', new_profile_path, class:"card-footer-item" %>
      <%= link_to 'New Tweet', new_tweet_path, class:"card-footer-item" %>
    </footer>
  </div>
</div>
