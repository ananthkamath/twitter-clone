<div class="card">
  <div class="card-image">
    <figure class="image is-4by3">
      <% if @profile.avatar.attached? %>
        <%= image_tag @profile.avatar %>
      <% else %>
        <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
      <% end %>
    </figure>
  </div>
  <div class="card-content">
    <div class="media">
      <div class="media-content">
        <p class="title is-4">
          <%= @profile.name || 'John Doe' %>
        </p>
        <p class="subtitle is-6">
          <%= @profile.handle || '@johndoe' %>
        </p>
      </div>
    </div>
    <div class="content">
      <p>
        <%= @profile.bio || 'Lorem Ipsum' %>
      </p>
      <p>
        Location: <%= @profile.location || 'Bermuda Triangle' %>
      </p>
    </div>
    <footer class="card-footer">
      <%= link_to 'Edit Profile', edit_profile_path(@profile), class:"card-footer-item" %>
      <%= link_to 'New Tweet', new_tweet_path, class:"card-footer-item" %>
    </footer>
  </div>
</div>
