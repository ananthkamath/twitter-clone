<% current_user.tweets.each do |tweet| %>
  <div class="card">
    <div class="card-content">
      <%= tweet.content %>
    </div>
    <footer class="card-footer">
      <%= link_to 'Edit', edit_tweet_path(tweet), class:"card-footer-item" %>
      <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class:"card-footer-item" %>
    </footer>
  </div>
  </br>
<% end %>
