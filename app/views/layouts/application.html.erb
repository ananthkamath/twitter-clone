<!DOCTYPE html>
<html>
  <head>
    <title>TwitterClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render './layouts/nav' %>
    <div style="display: flex;">
      <div style="margin-top: 1.5%; float: left; width: 25%; padding-right: 1%; padding-left: 1%">
        <% unless current_user.nil? %>
          <% if current_user.profile.nil? || !current_user.profile.persisted? %>
            <%= render './profiles/default' %>
          <% else %>
            <%= render './profiles/show' %>
          <% end %>
        <% end %>
      </div>
      <div style="margin-top: 1.5%; float: left; width: 50%; padding-right: 1%">
        <%= yield %>
      </div>
      <div style="margin-top: 1.5%; float: right; width: 25%; padding-right: 1%">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </div>
    </div>
  </body>
</html>
